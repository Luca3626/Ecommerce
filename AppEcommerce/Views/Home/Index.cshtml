@model IEnumerable<Prodotto> 
@{
    ViewData["Title"] = "Home Page";   
}
<div class="pricing-header p-3 pb-md-3 mx-auto text-center">
    <h1 class="display-4 fw-normal text-body-emphasis">Prodotti</h1>
   <!-- <p class="fs-5 text-body-secondary">Quickly build an effective pricing table for your potential customers.</p>-->
</div>
<div class="row row-cols-1 row-cols-md-3 mb-3">
    
    <!-- inzio div che contiene il prodotto-->
    @foreach (var item in Model)
    {
       <form asp-action="AggiornaCarrello" asp-controller="Ordini">
        <div class="col">
            <div class="card mb-4 rounded-3 shadow-sm">
                <div class="card-header py-3">
                    <h4 class="my-0 fw-normal">@item.Nome</h4>
                </div>
                <div class="card-body">
                    <h1 class="card-title pricing-card-title">@item.Prezzo<small class="text-body-secondary fw-light"> &euro;</small></h1>
                
                    <img src="~/assets/@item.Img" />
                    <input type="hidden" name="id_prod" value="@item.IdProdotto" />
                    <p class="list-unstyled mt-5 mb-4">
                        @item.Descrizione
                    </p>
                    <button type="submit" class="w-100 btn btn-lg btn-outline-primary">Aggiungi Carrello</button>
                </div>
            </div>
        </div>
        </form>
        <!-- fine div prodotto-->
    }

 
</div>
